if findtype "strong box" backpack
    if skill "Lockpicking" < 100
        overhead 'Lockpicking' 88
        if findtype "lockpicks" backpack
            dclicktype "lockpicks" backpack
            wft
            targettype "strong box" backpack
            wait 4000
        else
            stop
        endif
    endif
    loop
else
    overhead "No training box" 34
endif