  foreach id in id_mage_weapon_items
      sysmsg id 88
      while findtype id id_source_container as item
          getlabel item description
          overhead description 88
          if unidentified in description
              useskill "itemId"
              wft 500
              target item
              wait 2000
          elseif power in description or vanquishing in description or supremely in description or exceedingly in description or slaying in description or greater in description
